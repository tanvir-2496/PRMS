@model IEnumerable<PRMS.Models.Aggrement>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm pull-right">Create New</a>
                </p>
                <table class="table table-hover table-bordered table-responsive-lg" id="sampleTable">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Start Date
                            </th>
                            <th>
                                End Date
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                                Rent
                            </th>
                            <th>
                                Item
                            </th>
                            <th>
                                Customer
                            </th>

                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AggrementDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AggrementStartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AggrementEndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AggrementAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonthlyRent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InventoryItem.ItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerInfo.FirstName) @Html.DisplayFor(modelItem => item.CustomerInfo.LastName)
                                </td>

                                <td>
                                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.AggrementId">Edit</a> |
                                    <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.AggrementId">Details</a> |
                                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.AggrementId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#sampleTable').DataTable();
                    });

                    function ConfirmDelete() {
                        var x = confirm("Do you want to delete this item?");
                        if (x)
                            return true;
                        else
                            return false;
                    }
                </script>
            </div>
        </div>
    </div>
</div>
