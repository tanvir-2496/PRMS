@model PRMS.Models.CustomerInfo

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <h4>Add Customer Info</h4>
                <hr />
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control " />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control " />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="FatherName" class="control-label">Father Name</label>
                            <input asp-for="FatherName" class="form-control " />
                            <span asp-validation-for="FatherName" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="MotherName" class="control-label">Mother Name</label>
                            <input asp-for="MotherName" class="form-control " />
                            <span asp-validation-for="MotherName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="SpouseName" class="control-label">Spouse Name</label>
                            <input asp-for="SpouseName" class="form-control " />
                            <span asp-validation-for="SpouseName" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="DateOfBirth" class="control-label">Date Of Birth</label>
                            <input asp-for="DateOfBirth" class="form-control " type="date"/>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="NID" class="control-label">NID No</label>
                            <input asp-for="NID" class="form-control " />
                            <span asp-validation-for="NID" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="BirthId" class="control-label">Birth Id No</label>
                            <input asp-for="BirthId" class="form-control " />
                            <span asp-validation-for="BirthId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Contact1" class="control-label">Mobile</label>
                            <input asp-for="Contact1" class="form-control " />
                            <span asp-validation-for="Contact1" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Contact2" class="control-label">Phone</label>
                            <input asp-for="Contact2" class="form-control " />
                            <span asp-validation-for="Contact2" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control " />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="CustomerImage" class="control-label">Customer Photo</label>
                            <input type="file" asp-for="CustomerImage" class="form-control input-group-sm" />
                            <span asp-validation-for="CustomerImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="PresentAddress" class="control-label">Present Address</label>
                            <textarea asp-for="PresentAddress" class="form-control"></textarea>
                            <span asp-validation-for="PresentAddress" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="PermanentAddress" class="control-label">Permanent Address</label>
                            <textarea asp-for="PermanentAddress" class="form-control"></textarea>
                            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                            <br />
                            <input type="submit" value="Create" class="btn btn-success pull-right btn-sm" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <br />
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //Default HTML 5 Date Picker Clear
    $('input[type="date"]').attr('type', 'text');

    $('#DateOfBirth').datepicker({
        format: "mm/dd/yyyy",
        autoclose: true,
        todayHighlight: true
    }).datepicker("setDate", 'now');
</script>