@model IEnumerable<PRMS.Models.InventoryItem>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm pull-right">Create New</a>
                </p>
                <table class="table table-hover table-bordered table-responsive-lg" id="sampleTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Category")
                            </th>
                            <th>
                                @Html.DisplayName("Item Name")
                            </th>
                            <th>
                                @Html.DisplayName("Item Code")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Location)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InventoryCategory.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ItemCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @{
                                        long id = @item.InventoryItemId;
                                    }
                                    @Html.ActionLink("", "Edit", new { id = id }, new { @class = "btn btn-warning fa fa-pencil-square-o" })
                                    @Html.ActionLink("", "Delete", new { id = id }, new { @class = "btn btn-danger fa fa-trash", onclick = "return confirm('Are you sure you wants to delete this?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#sampleTable').DataTable();
    });

    function ConfirmDelete() {
        var x = confirm("Do you want to delete this item?");
        if (x)
            return true;
        else
            return false;
    }
</script>
