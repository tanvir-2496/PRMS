@model IEnumerable<PRMS.Models.CustomerDocument>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm pull-right">Create New</a>
                </p>
                <table class="table table-hover table-bordered table-responsive-lg" id="sampleTable">
                    <thead>
                        <tr>
                            <th>
                                Customer Name
                            </th>
                            <th>
                                Remarks
                            </th>
                            <th>
                                ReferanceId
                            </th>
                            <th>
                                Referance
                            </th>

                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerInfo.FirstName)  @Html.DisplayFor(modelItem => item.CustomerInfo.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReferanceId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Referance)
                                </td>
                                <td>
                                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.CustomerDocumentId">Edit</a> |
                                    <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.CustomerDocumentId">Details</a> |
                                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.CustomerDocumentId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#sampleTable').DataTable();
    });

    function ConfirmDelete() {
        var x = confirm("Do you want to delete this item?");
        if (x)
            return true;
        else
            return false;
    }
</script>