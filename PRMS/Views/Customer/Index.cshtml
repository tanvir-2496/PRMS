@model IEnumerable<PRMS.Models.CustomerInfo>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <p>
                        <a asp-action="Create" class="btn btn-primary btn-sm pull-right">Create New</a>
                    </p>
                    <table class="table table-hover table-bordered table-responsive-lg" id="sampleTable">
                        <thead>
                            <tr>
                                <th>
                                    Customer Name
                                </th>

                                <th>
                                    Father Name
                                </th>
                                <th>
                                    Mother Name
                                </th>
                                <th>
                                    Contact Number
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MotherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact1), @Html.DisplayFor(modelItem => item.Contact2)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <img src="~/Images/CustomerImage/@Html.DisplayFor(modelItem =>item.CustomerImage)" class="img-fluid rounded" style="height:50px;width:50px;" />
                                    </td>
                                    <td>
                                        <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.CustomerId">Details</a>|
                                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.CustomerId">Edit</a> |
                                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.CustomerId" id="demoSwal" onclick="ConfirmDelete()">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#sampleTable').DataTable();
    });
</script>